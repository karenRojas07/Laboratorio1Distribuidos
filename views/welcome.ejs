<!-- welcome.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Bienvenido</title>
  <!-- Bootstrap CSS (CDN) -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  />
</head>
<body class="bg-light">
  <!-- Barra de navegación o Cabecera -->
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <!-- Botón de Cerrar Sesión en la esquina derecha -->
      <form class="d-flex" action="/logout" method="POST">
        <button class="btn btn-outline-danger" type="submit">Cerrar Sesión</button>
      </form>
    </div>
  </nav>

  <div class="container mt-5">
    <h1 class="text-center">¡Disfruta tu sesión, <%= user.nombre_usuario %>!</h1>

    <!-- Mostrar los botones sólo si el rol es "admin" -->
        <% if (user.rol == '1') { %>
          <div class="text-center">
              <a href="/assign-roles" class="btn btn-primary">Asignar Roles a Usuarios</a>
          </div>
          <div class="text-center mt-2">
              <a href="/create-role" class="btn btn-success">Crear Nuevo Rol</a>
          </div>
        <% } %>

  </div>

  <!-- Bootstrap JS (CDN) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
