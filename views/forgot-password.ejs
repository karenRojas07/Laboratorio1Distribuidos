<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Recuperación de Contraseña</title>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  />
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-header bg-primary text-white">Recuperar Contraseña</div>
          <div class="card-body">
            <form id="forgot-password-form" action="/forgot-password" method="POST">
              <div class="mb-3">
                <label for="correo_electronico" class="form-label">Correo Electrónico</label>
                <input
                  type="email"
                  class="form-control"
                  id="correo_electronico"
                  name="correo_electronico"
                  placeholder="Ingresa tu correo electrónico"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary w-100">Enviar token</button>
              <br><br>
              <!-- Botón "Tengo el token!" inicialmente oculto -->
              <button id="token-btn" class="btn btn-primary w-100" style="display: none;" onclick="redirigirACambiarContrasena()">Tengo el token!</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<script>
  function redirigirACambiarContrasena() {
      // Obtener el token almacenado en localStorage
      const token = localStorage.getItem('resetPasswordToken');
      const correoElectronico = localStorage.getItem('correoElectronico'); // Obtener el correo almacenado

      // Verificar si el token y correo existen
      if (token && correoElectronico) {
        // Redirigir a la página de cambio de contraseña pasando el token en la URL
        window.location.href = `/reset-password/${token}`;
      } else {
        alert('Token o correo no encontrado. Por favor, solicita uno nuevo.');
      }
    }

</script>

  <script>
    document.getElementById('forgot-password-form').addEventListener('submit', function(event) {
      event.preventDefault();

      const correoElectronico = document.getElementById('correo_electronico').value;

      // Enviar solicitud POST para obtener el token
      fetch('/forgot-password', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ correo_electronico: correoElectronico }),
      })
      .then(response => response.json())
      .then(data => {
        if (data.message === 'Se ha enviado un correo con el token de recuperación.') {
          const token = generateToken();
          const expirationTime = Date.now() + 5 * 60 * 1000; // 5 minutos de expiración

          // Almacenar en localStorage
          localStorage.setItem('resetPasswordToken', token);
          localStorage.setItem('tokenExpiration', expirationTime);
          localStorage.setItem('correoElectronico', correoElectronico);
          alert('Token enviado y guardado en localStorage. Revisa tu correo.');

          // Hacer visible el botón "Tengo el token!"
          document.getElementById('token-btn').style.display = 'block';
        } else {
          alert(data.message);
        }
      })
      .catch(error => console.error('Error:', error));
    });

    // Función para generar un token aleatorio (simula el token generado en el servidor)
    function generateToken() {
      return Math.random().toString(36).substr(2, 4); // Genera un token aleatorio
    }
  </script>
</body>
</html>
