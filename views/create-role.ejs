<!-- views/create-role.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Crear Rol</title>
  <!-- Bootstrap CSS (CDN) -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  />
</head>
<body class="bg-light">
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <span class="navbar-brand mx-auto h1 text-center">
        Crear Rol
      </span>
      <!-- BotÃ³n para volver a la bienvenida (opcional) -->
      <form class="d-flex" action="/welcome" method="GET">
        <button class="btn btn-outline-primary" type="submit">Volver</button>
      </form>
    </div>
  </nav>

  <div class="container mt-5">
    <h1 class="mb-4">Crear un nuevo Rol</h1>

    <!-- Formulario para crear un rol -->
    <form action="/create-role" method="POST">
      <div class="mb-3">
        <label for="nombre_rol" class="form-label">Nombre del Rol</label>
        <input
          type="text"
          class="form-control"
          id="nombre_rol"
          name="nombre_rol"
          placeholder="Ejemplo: Administrador"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Crear Rol</button>
    </form>
  </div>

  <!-- Bootstrap JS (CDN) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
